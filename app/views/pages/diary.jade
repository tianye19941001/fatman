extends ../layout

block content
	h1.ty_in_title 
		span  日记
	.ty_article_list
		ul
			if diarys
				each item in diarys
					li
						h3 
							a(href="diarys_in?diarysId=#{item.diarysId}") #{item.title}
						p #{item.summary}
			else
				
	.pagelist
		.pagelistIN
			a(href='/diarys?number=#{now-1}').pre 上一页
				for item in numbers
					if item == now
						a(href='diarys?number=#{item}').btn.on #{item}
					else
						a(href='diarys?number=#{item}').btn #{item}
			a(href='/diarys?number=#{now+1}').next 下一页