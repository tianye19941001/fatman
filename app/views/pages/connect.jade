extends ../layout

block content
	.ty_connect
		p 站长：徐盼文
		p 联系邮箱：838530712@qq.com
	.ty_msg
		.ty_msg_list
			ul
				each item in messages
					li
						span 昵称:
						strong #{item.name.name}
						p #{item.message}
						if item.image
							img(src="#{item.image}", alt="暂无图片")
		form.ty_msg_bor(action="connect/message",method="post")
			if user
				textarea(placeholder="谢谢留言",name="message[message]")
				input.input(placeholder="支持放上图片链接啦",name="message[image]")
				input(type="hidden",name="message[name]",value="#{user._id}")
				p.ty_msg_sub
					input(type="submit",value="提交")
			else
				p.ty_tellyou 请登陆后再留言

		
